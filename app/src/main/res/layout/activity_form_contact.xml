<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText android:id="@+id/activity_form_contact_name"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:hint="@string/name"
            android:inputType="textCapWords"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <EditText android:id="@+id/activity_form_contact_tel_number"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:hint="@string/telephone_number"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <EditText android:id="@+id/activity_form_contact_email"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:hint="@string/e_mail_address"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <Button android:id="@+id/activity_form_contact_save_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/save"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
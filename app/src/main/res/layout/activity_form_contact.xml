<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activity_form_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:autofillHints=""
            android:hint="@string/name"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/activity_form_contact_tel_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:autofillHints=""
            android:hint="@string/telephone_number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/activity_form_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:autofillHints=""
            android:hint="@string/e_mail_address"
            android:inputType="textEmailAddress" />


        <ImageView
            android:id="@+id/activity_form_avatar"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_default_profile" />

        <Button
            android:id="@+id/activity_form_camera_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/Avatar" />

        <Button
            android:id="@+id/activity_form_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="#E40707"
            android:backgroundTint="#E80202"
            android:backgroundTintMode="add"
            android:text="@string/Cancel"
            app:iconTint="#E91E1E"
            app:iconTintMode="add"
            app:strokeColor="#F80606" />


    </LinearLayout>
</ScrollView>